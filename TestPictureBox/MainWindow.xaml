<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestPictureBox"
        xmlns:Forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms" x:Class="TestPictureBox.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" ResizeMode="CanMinimize">

    <WindowsFormsHost>
        <WindowsFormsHost.Background>
            <LinearGradientBrush>
                <GradientStop Color="#FF090B0C" Offset="0"/>
                <GradientStop Color="#FF1C1D1F" Offset="1"/>
            </LinearGradientBrush>
        </WindowsFormsHost.Background>
        <Forms:PictureBox MouseEnter="PictureBox_MouseEnter"
                          MouseDown="PictureBox_MouseDown"
                          MouseMove="PictureBox_MouseMove"
                          MouseWheel="PictureBox_MouseWheelMove"
                          Paint="PictureBox_Paint"/>
    </WindowsFormsHost>
</Window>
