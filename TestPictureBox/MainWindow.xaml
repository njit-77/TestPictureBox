<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestPictureBox"
        xmlns:Forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms" x:Class="TestPictureBox.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <WindowsFormsHost>
        <WindowsFormsHost.Background>
            <LinearGradientBrush>
                <GradientStop Color="#FF090B0C" Offset="0"/>
                <GradientStop Color="#FF1C1D1F" Offset="1"/>
            </LinearGradientBrush>
        </WindowsFormsHost.Background>
        <Forms:PictureBox/>
    </WindowsFormsHost>
</Window>
